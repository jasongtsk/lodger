extends layout

block content
  nav.bg-white.border-gray-200(class='dark:bg-gray-900')
    .max-w-screen-xl.flex.flex-wrap.items-center.justify-center.mx-auto.p-4
      a.mb-4.text-4xl.font-extrabold.tracking-tight.leading-none.text-gray-900(class='md:text-5xl lg:text-6xl dark:text-white' href='/')=logo


  main
    section.bg-white(class='dark:bg-gray-900')
      .py-8.px-4.mx-auto.max-w-screen-xl.text-center(class='lg:py-16 lg:px-12')
        h1.mb-4.text-4xl.font-extrabold.tracking-tight.leading-none.text-gray-900(class='md:text-5xl lg:text-6xl dark:text-white')=motto
        p.mb-8.text-lg.font-normal.text-gray-500(class='lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400')=description

        form.mx-auto(class='w-2/3' action='/')
          label.mb-2.text-sm.font-medium.text-gray-900.sr-only(for='search' class='dark:text-white') Search
          .relative
            .absolute.inset-y-0.start-0.flex.items-center.ps-3.pointer-events-none
              svg.w-4.h-4.text-gray-500(class='dark:text-gray-400' aria-hidden='true' xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 20 20')
                path(stroke='currentColor' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z')
            input#search.block.w-full.p-4.ps-10.text-sm.text-gray-900.border.border-gray-300.rounded-lg.bg-gray-50(type='search' name='location' class='focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' placeholder='Search for a Lodge' required='')
            button.text-white.absolute.bg-green-700.font-medium.rounded-lg.text-sm.px-4.py-2(type='submit' class='end-2.5 bottom-2.5 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800') Search



    section.grid.gap-8(class='grid-cols-3 mx-24 lg:mx-48 max-md:grid-cols-2 max-md:mx-8 max-sm:grid-cols-1 max-sm:mx-8')
      each lodge in lodges
        .bg-white.border.border-gray-200.rounded-lg.shadow(class='dark:bg-gray-800 dark:border-gray-700')
          a(href='#')
            img.rounded-t-lg.w-full.object-cover.object-center(src=lodge.imageURL alt='')
          .p-5
            a(href='#')
              h5.text-2xl.font-normal.tracking-tight.text-gray-900(class='dark:text-white') #{lodge.name}, #{lodge.city}, #{lodge.country}
            .flex.justify-between.mb-4
              .flex.gap-2.text-sm.font-light.items-center
                p #{lodge.bathrooms} Bathrooms
                span |
                p #{lodge.bedrooms} Bedrooms
              p #{lodge.rating}%
            p.font-light.text-sm.text-gray-700(class='dark:text-gray-400')=lodge.description

